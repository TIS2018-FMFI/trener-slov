<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.sceneControllers.LessonController">
   <top>
      <FlowPane alignment="CENTER_LEFT" prefHeight="50.0" BorderPane.alignment="CENTER_LEFT">
         <children>
            <Button fx:id="backBtn" mnemonicParsing="false" text="Späť" />
         </children>
         <padding>
            <Insets left="20.0" />
         </padding>
      </FlowPane>
   </top>
   <bottom>
      <BorderPane prefHeight="50.0" BorderPane.alignment="CENTER">
         <left>
            <Button fx:id="newGroupBtn" mnemonicParsing="false" text="Vytvor skupinu" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Button fx:id="okBtn" mnemonicParsing="false" text="Ok" BorderPane.alignment="CENTER" />
         </right>
         <BorderPane.margin>
            <Insets left="20.0" right="20.0" />
         </BorderPane.margin>
      </BorderPane>
   </bottom>
   <center>
      <VBox alignment="CENTER_LEFT" spacing="20.0" BorderPane.alignment="TOP_LEFT">
         <children>
            <HBox alignment="CENTER_LEFT" fillHeight="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
               <children>
                  <Label text="Názov: " />
                  <TextField fx:id="name" prefHeight="25.0" prefWidth="265.0" />
               </children>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </HBox>
            <BorderPane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <center>
                  <ListView fx:id="groupsListView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
               </center>
               <top>
                  <TextField BorderPane.alignment="CENTER" />
               </top>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </BorderPane>
         </children>
      </VBox>
   </center>
</BorderPane>
