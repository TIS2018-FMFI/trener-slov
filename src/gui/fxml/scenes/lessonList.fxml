<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.LessonListController">
   <center>
      <ListView fx:id="lessonsListView" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <FlowPane alignment="CENTER_LEFT" prefHeight="50.0" BorderPane.alignment="CENTER_LEFT">
         <children>
            <Button fx:id="backBtn" mnemonicParsing="false" text="Späť" />
         </children>
         <padding>
            <Insets left="20.0" />
         </padding>
      </FlowPane>
   </top>
   <bottom>
      <BorderPane prefHeight="50.0" BorderPane.alignment="CENTER">
         <left>
            <Button fx:id="newLessonBtn" mnemonicParsing="false" text="Nová lekcia" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <HBox alignment="CENTER_RIGHT" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="importBtn" mnemonicParsing="false" text="Import" />
                  <Button fx:id="exportBtn" mnemonicParsing="false" text="Export" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
         </right>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets right="20.0" />
         </padding>
         <BorderPane.margin>
            <Insets left="20.0" />
         </BorderPane.margin>
      </BorderPane>
   </bottom>
</BorderPane>
